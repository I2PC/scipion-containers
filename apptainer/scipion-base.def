Bootstrap:docker
From:nvidia/cuda:11.8.0-cudnn8-devel-ubuntu22.04

%labels
  Maintainer1 miceta@cnb.csic.es
  Maintainer2 md.sanchez@cnb.csic.es
  Version 24.02.1

%help
  Base recipe for Scipion on Apptainer/Singularity image generation.

%files
./slurm.conf /etc/slurm/slurm.conf

%post
# Ezport tz for apt so it does not block on install
export TZ=UTC
export DEBIAN_FRONTEND=noninteractive
# Add cuda lib to path
export LD_LIBRARY_PATH="/usr/local/cuda/lib64:$LD_LIBRARY_PATH"

# Lets you know if cuda is OK
which nvcc
ls -l /dev/nvidia*

# Dependencies
apt update
# Utilities
apt install -y --no-install-recommends --no-install-suggests curl git less nano wget vim python3-numpy python3-dev awk
# Compilation
apt install -y --no-install-recommends --no-install-suggests gcc-10 g++-10 make cmake scons default-jdk rsync
# Xmipp + Scipion libraries
apt install -y --no-install-recommends --no-install-suggests libfftw3-dev libhdf5-dev libopenmpi-dev libsqlite3-dev libtiff5-dev 
# Slurm libraries
apt install -y --no-install-recommends --no-install-suggests build-essential fakeroot devscripts equivs libjwt-dev libgtk2.0-dev libhwloc-dev libbpf-dev libdbus-1-dev

# Slurm download
SLURM=slurm-24.11.1.tar.bz2
wget https://download.schedmd.com/slurm/slurm-24.11.1.tar.bz2
tar -xaf slurm-24.11.1.tar.bz2 -C /slurm
rm slurm-24.11.1.tar.bz2
# Slurm base installation
cd /slurm
mk-build-deps -i debian/control
debuild -b -uc -us

# Slurm resources configuration
echo "AutoDetect=nvidia" > /etc/slurm/gres.conf
sed -i '' 's/CPUs=1/CPUs=$(nproc)/g' /etc/slurm/slurm.conf
sed -i '' "/^Nodename=/s/$/ RealMemory=$(free -m | awk '/Mem:/ {print $2}')" /etc/slurm/slurm.conf

# Miniforge installation
wget -q "https://github.com/conda-forge/miniforge/releases/latest/download/Miniforge3-$(uname)-$(uname -m).sh" -O miniforge.sh
bash miniforge.sh -b -p /opt/miniforge3
rm miniforge.sh
ln -s /opt/miniforge3/etc/profile.d/conda.sh /etc/profile.d/conda.sh
echo ". /opt/miniforge3/etc/profile.d/conda.sh" >> $SINGULARITY_ENVIRONMENT
echo 'export PATH="/opt/miniforge3/bin:${PATH}"' >> $SINGULARITY_ENVIRONMENT
. /opt/miniforge3/etc/profile.d/conda.sh
export PATH="/opt/miniforge3/bin:${PATH}"

# Scipion installation
conda run -n base pip3 install --user scipion-installer scons numpy
conda run -n base python3 -m scipioninstaller -conda -noAsk /scipion

# Scipion configuration
printf "\n\n" | /scipion/scipion3 config --overwrite;
sleep 5
echo "MPI_BINDIR=/usr/bin\n" >> /scipion/config/scipion.conf
echo "MPI_LIBDIR=/usr/lib/x86_64-linux-gnu/openmpi/lib\n" >> /scipion/config/scipion.conf
echo "MPI_INCLUDE=/usr/lib/x86_64-linux-gnu/openmpi/include\n" >> /scipion/config/scipion.conf
echo "CUDA = True\n" >> /scipion/config/scipion.conf
echo "OPENCV = False\n" >> /scipion/config/scipion.conf

# Xmipp base
/scipion/scipion3 installp -p scipion-em-xmipp -j 16

# Cleaning tasks for space optimisation
apt clean
apt autoclean
apt autoremove
rm -rf /var/lib/apt/lists/*
unset DEBIAN_FRONTEND

%runscript